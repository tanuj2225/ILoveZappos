<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2"
        android:id="@+id/itemLayout"
        >

        <ImageView
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/proImg"
            android:elevation="1dp">
        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="3dp">
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/proName"
                android:textSize="14sp"
                android:textAlignment="viewStart"

                android:layout_gravity="start"
                android:textColor="?attr/actionMenuTextColor"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quantityC"
                    android:textSize="12sp"
                    android:textColor="?android:attr/colorFocusedHighlight"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orders"
                    android:textSize="12sp"
                    android:textColor="?android:attr/colorFocusedHighlight"
                    android:layout_marginLeft="4dp"
                    android:text="orders"/>
            </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CPrice"
            android:textSize="10sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/priceinrecycle"
            android:padding="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/perUnit"
                android:textSize="10sp"
                android:text="@string/perunit"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="3dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderedOn"
                android:text="@string/addedon"
                android:textSize="10sp"
                android:textColor="@color/colorPrimaryDark"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderedDate"
                android:textSize="10sp"

                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </LinearLayout>